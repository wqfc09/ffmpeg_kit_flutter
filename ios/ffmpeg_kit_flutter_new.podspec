Pod::Spec.new do |s|
  s.name             = 'ffmpeg_kit_flutter_new'
  s.version          = '1.0.0'
  s.summary          = 'FFmpeg Kit for Flutter'
  s.description      = 'A Flutter plugin for running FFmpeg and FFprobe commands.'
  s.homepage         = 'https://github.com/sk3llo/ffmpeg_kit_flutter'
  s.license          = { :file => '../LICENSE' }
  s.author           = { 'Anton Karpenko' => 'kapraton@gmail.com' }

  s.platform            = :ios
  s.requires_arc        = true
  s.static_framework    = true

  s.source              = { :path => '.' }
  s.source_files        = 'Classes/**/*'
  s.public_header_files = 'Classes/**/*.h'
  s.default_subspec     = 'custom'

  s.dependency          'Flutter'
  s.pod_target_xcconfig = {
    'DEFINES_MODULE' => 'YES',
    'EXCLUDED_ARCHS[sdk=iphonesimulator*]' => 'i386'
  }

  s.prepare_command = <<-CMD
    chmod +x ../scripts/setup_ios.sh
    ../scripts/setup_ios.sh
  CMD

  s.subspec 'custom' do |ss|
    ss.source_files = 'Classes/**/*'
    ss.public_header_files = 'Classes/**/*.h'
    ss.ios.vendored_frameworks = 'Frameworks/**/*.xcframework'
    ss.ios.frameworks = 'AudioToolbox', 'CoreMedia', 'AVFoundation', 'VideoToolbox'
    ss.libraries = 'z', 'bz2', 'c++', 'iconv'
    ss.ios.deployment_target = '14.0'
  end
end
